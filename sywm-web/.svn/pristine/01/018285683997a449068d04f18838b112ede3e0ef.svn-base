$(function() {
	// 切换导航状态
	toggleNav(6, 1, 0);

	initZTree();
});
var zTreeObj;
var setting = {
	view : {
		showLine : false,
		showIcon : false
	},
	callback : {
		onClick : function(event, treeId, treeNode, clickFlag) {
			alert(treeNode.id + ", " + treeNode.name + ", " + treeNode.pid);
		}
	}
};
var zNodes = [ {
	id : 0,
	pid : 0,
	name : "商品分类",
	open : true,
	children : [ {
		id : 1,
		pid : 0,
		name : "厨房调料",
		open : true,
		children : [ {
			id : 11,
			pid : 1,
			name : "粮油",
			children : [ {
				id : 111,
				pid : 11,
				name : "调和油"
			}, {
				id : 111,
				pid : 11,
				name : "色拉油"
			} ]
		}, {
			id : 12,
			pid : 1,
			name : "酱油"
		} ]
	} ]
} ];
function initZTree() {
	zTreeObj = $.fn.zTree.init($("#tree"), setting, zNodes);
}
function search() {
	var nodes = zTreeObj.getNodesByParamFuzzy("name", "2", null);
	for (var i = 0; i < nodes.length; i++) {
		zTreeObj.selectNode(nodes[i], true, false);
	}
}
var $valid;
$(function() {
	// 切换导航状态
	toggleNav(8, 2, 0);
	
	$valid = $("#addForm").Validform({
		btnSubmit : "#submitBtn",
		tiptype : 4,
		ignoreHidden : true,
		dragonfly : false,
		tipSweep : false,
		showAllError : true,
		postonce : true,
		ajaxPost : false,
		datatype : {

		},
		usePlugin : {},
		beforeCheck : function(curform) {

		},
		beforeSubmit : function(curform) {

			submit();
			return false;
		},
		callback : function(data) {
		}
	});
});
function submit() {

	$.ajax({
		type : "POST",
		url : basePath + "/driver/add",
		data : $('#addForm').serialize(),
		dataType : "json",
		success : function(msg) {
			
			if (msg.success) {
				
				alert("添加成功！");
				window.location.href = basePath + "/driver/add/view";

			}
		}
	});

};
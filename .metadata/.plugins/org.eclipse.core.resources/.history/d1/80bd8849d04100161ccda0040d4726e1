$(function() {
	// 切换导航状态
	toggleNav(6, 0, 0);
	read();
});
function read(){
	$.ajax({
		url : basePath + "/recipient/read",
		data : {
			recipientIds : id
		},
		dataType : "json",
		type : "post",
		success : function(data) {
			if (data.success) {
				$("#addForm").form('load', data.msg); 
			} else {
				alert(data.msg);
			}
		},

		error : function() {
			alert("请求失败");
		}
	});
}
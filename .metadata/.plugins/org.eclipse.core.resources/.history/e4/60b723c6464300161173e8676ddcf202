$(function() {
	// 切换导航状态
	toggleNav(6, 3, 0);
	// 加载品牌KV
	brandsKV();
	// 加载库区KV
	loadStorageAreasKV();
	// 加载商品分类树
	initZTree();
	// 初始化表单验证
	initValidForm();
});

var valid;
// 初始化表单验证
function initValidForm() {
	valid = $("#addForm").Validform({
		btnSubmit : "#submitBtn",
		tiptype : 4,
		ignoreHidden : true,
		dragonfly : false,
		tipSweep : false,
		showAllError : true,
		postonce : true,
		ajaxPost : false,
		datatype : {

		},
		usePlugin : {},
		beforeCheck : function(curform) {
		},
		beforeSubmit : function(curform) {
			/*
			 * if ($("#operate").val() == "add") { submitAdd(); } else if
			 * ($("#operate").val() == "update") { submitUpdate(); }
			 */
			submit();
			return false;
		},
		callback : function(data) {
		}
	});
}
//为form表单绑定提交事件
function submit() {
	$.ajax({
		url : basePath + "/recipient/add",
		data : $("#addForm").serialize(),
		dataType : "json",
		type : "post",
		success : function(data) {
			if (data.success) {
				$("#submitBtn").attr("disabled", "disabled ");
				alert("保存成功！即将跳转之列表页");
				window.location.href = basePath + "/recipient/list/view";
			}else{
				alertWm(data.msg);
			}
		},

		error : function() {
			alertWm("请求失败");
		}
	});

};
var zTreeObj;
var setting = {
	view : {
		showLine : false,
		showIcon : false
	},
	callback : {
		onClick : function(event, treeId, treeNode, clickFlag) {
			$("#showType").text(treeNode.name);
		}
	}
};

// 加载商品分类树
function initZTree() {
	$.ajax({
		url : basePath + '/commodityType/queryTree',
		data : {

		},
		dataType : 'json',
		success : function(data) {
			// 初始化zTree
			zTreeObj = $.fn.zTree.init($("#tree"), setting, data);
		},
		error : function() {
			alertWm("系统错误，请稍后再试。");
		}
	});
}
// 加载品牌KV
function brandsKV() {
	$.ajax({
		url : basePath + '/brands/kv',
		data : {

		},
		dataType : 'json',
		success : function(data) {
			var $select = $("#brandsIdSelect");
			if (data.length < 1) {
				$.each(data, function(i, v) {
					var option = document.createElement("option");
					$(option).val(v.value).text(v.text).appendTo($select);
				});
			} else {
				alertWm("请先添加品牌数据！");
			}
		},
		error : function() {
			alertWm("系统错误，请稍后再试。");
		}
	});
}
// 加载库区KV
function loadStorageAreasKV() {
	$.ajax({
		url : basePath + '/storageAreas/kv',
		data : {

		},
		dataType : 'json',
		success : function(data) {
			var $select = $("#storageAreasIdSelect");
			$.each(data, function(i, v) {
				var option = document.createElement("option");
				$(option).val(v.value).text(v.text).appendTo($select);
			});
		},
		error : function() {
			alertWm("系统错误，请稍后再试。");
		}
	});
}
function showTypeModal() {
	$('#typeSelectModal').modal('open');
}
function showAddPackingModal() {
	$('#addPackingForm').form('clear');
	$('#addPackingModal').modal('open');
}
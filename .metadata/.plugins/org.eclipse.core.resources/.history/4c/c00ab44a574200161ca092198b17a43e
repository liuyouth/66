$(function() {
	// 切换导航状态
	toggleNav(6, 0, 0);
	read();
});
function read(){
	$.ajax({
		url : basePath + "/recipient/read",
		data : {
			recipientId : id
		},
		dataType : "json",
		type : "post",
		success : function(data) {
			if (data.success) {
				$("#addForm").form('load', data.msg[0]); 
			} else {
				alert(data.msg);
			}
		},

		error : function() {
			alert("请求失败");
		}
	});
}
function upDate(){
	$.ajax({
		url : basePath + "/recipient/update",
		data : $("#addForm").serialize(),
		dataType : "json",
		type : "post",
		success : function(data) {
			if (data.success) {
				alert("保存成功！");
			} else {
				alert(data.msg);
			}
		},
		
		error : function() {
			alert("请求失败");
		}
	});
}
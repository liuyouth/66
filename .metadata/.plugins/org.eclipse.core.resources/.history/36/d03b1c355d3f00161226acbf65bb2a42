});
//为form表单绑定提交事件
function submit(){
	
	$('#addForm').form('submit', {
		url : "${basePath}/lendingApply/add",
		success : function(data) {
			var result = eval('(' + data + ')');
			if (result.success) {
				$("#submitBtn").attr("disabled","disabled ");
				customDialog("question","添加成功。现在返回申请列表？",function(){
					window.location.href="${basePath}/page/show?url=apply/list";
				});
			} else {
				customDialog("error",result.msg);
			}
		},
		onLoadError : function() {
			customDialog("error","系统错误，请稍后再试。");
		}
	});
	
};
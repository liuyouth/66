$(function() {
	// 切换导航状态
	toggleNav(6, 3, 0);
	// 加载库区KV
	loadStorageAreasKV();
	// 初始化表单验证
	einitValidForm();
	initValidForm();
});
var typeId;
var typeName;

var $evalid;
//校验单个输入框 （校验的Id）
function evalidDate(id) {
    $evalid.check(false, ("#" + id));
}

//初始化表单验证
function einitValidForm() {
	$evalid = $("#editForm").Validform({
		btnSubmit : "#submitBtn",
		tiptype : 4,
		ignoreHidden : true,
		dragonfly : false,
		tipSweep : false,
		showAllError : true,
		postonce : true,
		ajaxPost : false,
		datatype : {

		},
		usePlugin : {},
		beforeCheck : function(curform) {
		},
		beforeSubmit : function(curform) {
			/*
			 * if ($("#operate").val() == "add") { submitAdd(); } else if
			 * ($("#operate").val() == "update") { submitUpdate(); }
			 */
			esubmit();
			return false;
		},
		callback : function(data) {
		}
	});
}
// 为form表单绑定提交事件
function esubmit() {
	$("#submitBtn").attr("disabled", "disabled ");
	$.ajax({
		url : basePath + "/commodityBase/update",
		data : $("#editForm").serialize(),
		dataType : "json",
		type : "post",
		success : function(data) {
			if (data.success) {
				alert("保存成功！");
				
			} else {
				alertWm(data.msg);
			}
		},

		error : function() {
			alertWm("系统错误，请稍后再试。");
		}
	});

};
var $valid;
//校验单个输入框 （校验的Id）
function validDate(id) {
	$valid.check(false, ("#" + id));
}

//初始化表单验证
function initValidForm() {
	$valid = $("#addPackingForm").Validform({
		btnSubmit : "#submitP",
		tiptype : 4,
		ignoreHidden : true,
		dragonfly : false,
		tipSweep : false,
		showAllError : true,
		postonce : true,
		ajaxPost : false,
		datatype : {
			
		},
		usePlugin : {},
		beforeCheck : function(curform) {
		},
		beforeSubmit : function(curform) {
			/*
			 * if ($("#operate").val() == "add") { submitAdd(); } else if
			 * ($("#operate").val() == "update") { submitUpdate(); }
			 */
			submit();
			return false;
		},
		callback : function(data) {
		}
	});
}
// 为form表单绑定提交事件
function submit() {
	$("#submitP").attr("disabled", "disabled ");
	$.ajax({
		url : basePath + "/commodityPacking/add",
		data : $("#addPackingForm").serialize(),
		dataType : "json",
		type : "post",
		success : function(data) {
			if(data.success){
				alert("操作成功！");
				hideAddPackingModal();
				search();
			}else{
				alertWm(data.msg);
			}
		},
		
		error : function() {
			alertWm("系统错误，请稍后再试。");
		}
	});
	
};
var zTreeObj;
var setting = {
	view : {
		showLine : false,
		showIcon : false
	},
	callback : {
		onClick : function(event, treeId, treeNode, clickFlag) {
			if (treeNode.id != 1) {
				typeId = treeNode.id;
				typeName = treeNode.name;
				$("#showType").text(treeNode.name);
				$("#showError").text("");
			}
		}
	}
};

// 加载库区KV
function loadStorageAreasKV() {
	$.ajax({
		url : basePath + '/storageAreas/kv',
		data : {

		},
		dataType : 'json',
		success : function(data) {
			var $select = $("#storageAreasIdSelect");
			$.each(data, function(i, v) {
				var option = document.createElement("option");
				$(option).val(v.value).text(v.text).appendTo($select);
			});
			//读商品数据
			read();
		},
		error : function() {
			alertWm("系统错误，请稍后再试。");
		}
	});
}

function read(){
	$.ajax({
		url : basePath + "/commodityBase/read/"+id,
		data : {
		},
		dataType : "json",
		type : "post",
		success : function(data) {
			if (data.success) {
				$("#editForm").form('load', data.msg); 
				if (data.msg.storageAreas != null) {
					$('#storageAreasIdSelect').find(
							'option[value=' + data.msg.storageAreas.storageAreasId
									+ ']').attr('selected', true);
				} else {
					$('#storageAreasIdSelect').find('option').eq(0).attr(
							'selected', true);
				}
				if (data.msg.commoditySinglePackingUnit != null) {
					$('[name=commoditySinglePackingUnit]').find(
							'option[value=' + data.msg.commoditySinglePackingUnit
							+ ']').attr('selected', true);
				} else {
					$('[name=commoditySinglePackingUnit]').find('option').eq(0).attr(
							'selected', true);
				}

			} else {
				alertWm(data.msg);
			}
		},

		error : function() {
			alertWm("系统错误，请稍后再试。");
		}
	});
}



function selectAll(){
	if($("#allCheckbox").is(":checked")){
		$(".ckClassFlg").prop('checked',true);
	}else{
		$(".ckClassFlg").prop('checked',false);
	}
}
function showAddPackingModal() {
	$('#addPackingModal').modal('open');
}
function hideAddPackingModal() {
	$('#addPackingForm').form('clear');
	$('#addPackingModal').modal('close');
	$("[name='commodityBase.commodityBaseId']").val(id);
}